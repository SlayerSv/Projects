{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "vite-env.d.ts", "app/shared/Navbar/Navbar.tsx", "app/shared/Layout/Layout.tsx", "app/main.tsx", "app/shared/Spinner/Spinner.tsx", "app/App.tsx", "app/Store/Index.ts", "app/shared/DateDisplayer/Index.tsx", "app/pages/AddPost/FormAddPost.tsx", "app/pages/EditPost/FormEditPost.tsx", "app/pages/Post/PostPage.tsx", "app/Store/Posts/postsSlice.ts", "app/pages/Home/PostsList.tsx", "app/shared/PostAuthor/PostAuthor.tsx", "app/shared/ReactionButtons/ReactionButtons.tsx", "app/Store/Users/usersSlice.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
